{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Ajuste para que o Vite/TS consigam ler imports absolutos
    "baseUrl": "./",

    // Se seu código fonte está dentro de "src"
    "rootDir": "./src",
    "outDir": "./dist",

    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,

    // Permite "import x from 'react'"
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Se você quiser ou não permitir "any" implícito
    "noImplicitAny": false,

    // Mapeamentos de alias
    "paths": {
      "@components/Positions.js": ["src/components/Positions.tsx"],
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@context/*": ["src/context/*"],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
